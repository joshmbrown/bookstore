
@{
}

@model Checkout


<form method="post" asp-action="Checkout">

    <div asp-validation-summary="All" class="text-danger"></div>

    <h2>User Info</h2>

    <div class="form-group">
        <label asp-for="UserName">Username: </label>
        <input type="text" asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name: </label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name:</label>
        <input type="text" asp-for="LastName" class="form-control" />
    </div>
    <br /><br />

    <h2>Address Info</h2>

    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1: </label>
        <input type="text" asp-for="AddressLine1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2: </label>
        <input type="text" asp-for="AddressLine2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City: </label>
        <input type="text" asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State">State: </label>
        <input type="text" asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Zip">Zip Code: </label>
        <input type="text" asp-for="Zip" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country">Country: </label>
        <input type="text" asp-for="Country" class="form-control" />
    </div>

    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Submit Order" />
    </div>


</form>
