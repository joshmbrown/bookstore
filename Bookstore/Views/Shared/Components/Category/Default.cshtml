
@{
}

@model IEnumerable<string>

<h4 class="text-center">Category Filter</h4>
<br />

<div class="d-grid gap-2">
    @foreach (string cat in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@cat" asp-route-pageNum="1"
           class="btn btn-block @(ViewBag.SelectedCategory == cat ? "btn-secondary" : "btn-outline-secondary")">@cat</a>
    }

    <br />
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="1"
       class="btn btn-block btn-outline-danger">Clear Filters</a>
</div>