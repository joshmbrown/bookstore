@{
    Thread.CurrentThread.CurrentCulture = new CultureInfo("es-US");
}

@model Cart

<div class="">
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your Cart:</b>
            @Model.Items.Sum(x => x.Quantity) Item(s)
            @Model.CalculateTotalPrice().ToString("C")
        </small>
    }
    <a class="btn btn-sm navbar-btn" asp-page="/cart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i>
            <img src="/img/shopping_cart.svg" style="filter: invert(1);" />
        </i>
    </a>
</div>
