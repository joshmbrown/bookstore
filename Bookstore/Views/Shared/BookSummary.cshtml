
@{
}

@model Book

<div class="card my-2 p-2">
    <div class="row align-items-center">
        <div class="col-6 px-5">
            <h2 class="card-title">@Model.Title</h2>
            <h5 class="card-subtitle text-muted">@Model.Author</h5>
        </div>
        <div class="col">
            <h6>Publisher: @Model.Publisher</h6>
            <h6>ISBN: @Model.Isbn</h6>
            <h6>Classification: @Model.Classification</h6>
            <h6>Number of Pages: @Model.PageCount</h6>
            <h6>Price: $@Model.Price</h6>
        </div>
        <div class="col-2">
            <form method="post" asp-page="/cart">
                <input type="hidden" asp-for="@Model.BookId" />
                <input type="hidden" name="returnURL" value="@ViewContext.HttpContext.Request.PathAndQuery()" />


                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        </div>
    </div>
</div>

