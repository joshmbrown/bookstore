@inherits LayoutComponentBase
@{
    Thread.CurrentThread.CurrentCulture = new CultureInfo("es-US");
}

<div class="bg-info rounded text-white p-2 px-4">
    <div class="row align-items-center">
        <div class="col">
            <span class="navbar-brand">Admin View</span>
        </div>
        <div class="col">
            <a class="btn btn-dark btn-sm float-right" href="/account/logout">Log Out</a>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-2">
            <NavLink class="btn btn-block btn-outline-primary" href="/admin/Books"
                     ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>
            <NavLink class="btn btn-block btn-outline-primary" href="/admin/Orders"
                     ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Orders</NavLink>
        </div>
        <div class="col">
            @Body
        </div>
    </div>
</div>
